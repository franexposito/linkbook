{
  "manifest_version": 2,
  "name": "LinkBook",
  "version": "0.1.1",
  "description": "La extensión para compartir enlaces entre tus dispositivos más rápida y sencilla.",
  "icons": { "16": "/img/icon16.png",
           "48": "/img/icon48.png",
          "128": "/img/icon128.png" },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "LinkBook",
    "default_icon": "/img/icon48.png"
  },
  "permissions": [
    "tabs",
    "http://*/",
    "storage"
  ]
}